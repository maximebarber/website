{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    {{ dump(consoles) }}

    <!-- table>(thead>tr>th*3)>(tbody>tr>td*3) -->
    <table border="3px solid black">
        <thead>
            <tr>
                <th>Nom produit</th>
                <th>Prix</th>
                <th>Image produit</th>
                <th>Catégorie</th>
            </tr>
        </thead>
        <tbody>
            {% for console in consoles %}
                <tr>
                    <td>
                        <a href="{{ path("produit", {"id": console.id}) }}">{{ console.nom }}</a>
                    </td>
                    <td>{{ console.prix|number_format(2,'.',' ') }} €</td>
                    <td><img src="{{ console.image }}" style="width:150px;"></td>
                    <td>{{ console.category.nom }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}


